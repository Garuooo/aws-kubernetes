apiVersion: apps/v1
kind: Deployment
metadata:
  name: mysql-ephemeral
  labels:
    app: mysql-ephemeral
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mysql-ephemeral
  template:
    metadata:
      labels:
        app: mysql-ephemeral
    spec:
      containers:
      - name: mysql
        image: mysql:8.0.39
        env:
        - name: MYSQL_ROOT_PASSWORD
          value: "rootpw"
        - name: MYSQL_DATABASE
          value: "mydatabase"
        - name: MYSQL_USER
          value: "mysqluser"
        - name: MYSQL_PASSWORD
          value: "mysqlpw"
        ports:
        - containerPort: 3306
---
apiVersion: v1
kind: Service
metadata:
  name: mysql-ephemeral
spec:
  selector:
    app: mysql-ephemeral
  ports:
    - protocol: TCP
      port: 3306
      targetPort: 3306
---
